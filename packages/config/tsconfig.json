{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Config",
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es5"],
    "declarationDir": "./dist",
    "sourceMap": false,
    "allowJs": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "types"
  ]
}
