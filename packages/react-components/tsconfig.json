{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Components",
  "extends": "tsconfig/react-components.json",
  "typeRoots": ["node_modules/@types"],
  "compilerOptions": {
    "baseUrl": "./",
    "declarationDir": "./"
  },
  "paths": {
    "@/components/*": ["./components/*"]
  },
  "exclude": [
    "node_modules",
    "__fixtures__",
    "dist"
  ],
  "include": [
    "types/*",
    "**/*.ts",
    "**/*.tsx"
  ]
}
