{
  "name": "wanda",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:nocache": "turbo run build --no-cache",
    "build:apps": "turbo run build:next",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "release": "changeset publish",
    "prepare": "is-ci || husky install",
    "update:deps": "npx npm-upgrade-monorepo"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.2",
    "@changesets/cli": "2.20.0",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "@wonderflow/eslint-config": "1.1.11",
    "eslint-plugin-json": "3.1.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "lint-staged": "12.3.2",
    "turbo": "1.1.1",
    "uvu": "0.5.3"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "build:next": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "start": {
        "cache": false
      },
      "test": {
        "cache": false
      },
      "lint": {
        "outputs": []
      }
    }
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "caniuse-lite": "1.0.30001303"
  }
}
